commands:
  get_sudo:
    command: echo Defaults:root \!requiretty >> /etc/sudoers 
  npm_install_bower:
    command: sudo npm install -g bower
  npm_install_gulp:
    command: sudo npm install -g gulp
container_commands:
  gulp_install:
    command: sudo npm install gulp --allow-root
  bower_install:
    command: sudo bower install --allow-root
